<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="nz.ac.canterbury.ucgeography" versionCode="10" version="1.0.0">
  <preference name="phonegap-version" value="cli-6.3.0" />
  <name>GeoHealthTracker</name>
  <description>GeoHealthTracker</description>
  <author href="http://www.canterbury.ac.nz/" email="haydenr@catalyst.net.nz">University of Canterbury</author>
  <content src="index.html" />

  <preference name="permissions" value="none" />

  <platform name="android" />
  <platform name="ios" />

  <plugin name="cordova-plugin-mauron85-background-geolocation" spec="2.2.0" source="npm" />
  <plugin name="cordova-plugin-whitelist" version="1.2.2" source="npm" />

  <!-- Icon -->
  <icon src="static/images/icon.png" />
  <!-- Android -->
  <icon src="static/images/icon/android/drawable-ldpi-icon.png" platform="android" qualifier="ldpi" />
  <icon src="static/images/icon/android/drawable-mdpi-icon.png" platform="android" qualifier="mdpi" />
  <icon src="static/images/icon/android/drawable-hdpi-icon.png" platform="android" qualifier="hdpi" />
  <icon src="static/images/icon/android/drawable-xhdpi-icon.png" platform="android" qualifier="xhdpi" />
  <icon src="static/images/icon/android/drawable-xxhdpi-icon.png" platform="android" qualifier="xxhdpi" />
  <icon src="static/images/icon/android/drawable-xxxhdpi-icon.png" platform="android" qualifier="xxxhdpi" />
  <!-- iOS 8 -->
  <!-- iPhone 6 / 6+ -->
  <icon src="static/images/icon/ios/icon-60@3x.png" platform="ios" width="180" height="180" />
  <!-- iOS 7 -->
  <!-- iPhone / iPod Touch  -->
  <icon src="static/images/icon/ios/icon-60.png" platform="ios" width="60" height="60" />
  <icon src="static/images/icon/ios/icon-60@2x.png" platform="ios" width="120" height="120" />
  <!-- iPad -->
  <icon src="static/images/icon/ios/icon-76.png" platform="ios" width="76" height="76" />
  <icon src="static/images/icon/ios/icon-76@2x.png" platform="ios" width="152" height="152" />
  <!-- iOS 6.1 -->
  <!-- Settings Icon -->
  <icon src="static/images/icon/ios/icon-small.png" platform="ios" width="29" height="29" />
  <icon src="static/images/icon/ios/icon-small@2x.png" platform="ios" width="58" height="58" />
  <!-- Spotlight Icon -->
  <icon src="static/images/icon/ios/icon-40.png" platform="ios" width="40" height="40" />
  <icon src="static/images/icon/ios/icon-40@2x.png" platform="ios" width="80" height="80" />
  <!-- iPhone / iPod Touch -->
  <icon src="static/images/icon/ios/icon.png" platform="ios" width="57" height="57" />
  <icon src="static/images/icon/ios/icon@2x.png" platform="ios" width="114" height="114" />
  <!-- iPad -->
  <icon src="static/images/icon/ios/icon-72.png" platform="ios" width="72" height="72" />
  <icon src="static/images/icon/ios/icon-72@2x.png" platform="ios" width="144" height="144" />
  <!-- iPad Pro -->
  <icon src="static/images/icon/ios/icon-83.5@2x.png" platform="ios" width="167" height="167" />
  <!-- iPad Spotlight and Settings Icon -->
  <icon src="static/images/icon/ios/icon-50.png" platform="ios" width="50" height="50" />
  <icon src="static/images/icon/ios/icon-50@2x.png" platform="ios" width="100" height="100" />

  <allow-navigation href="*://*/*" />
  <allow-intent href="*://*/*" />
  <access origin="*://*/*" />
</widget>
