<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="nz.ac.canterbury.ucgeography" versionCode="10" version="1.0.0">
  <preference name="phonegap-version" value="cli-6.3.0" />
  <name>GeoHealth Tracker</name>
  <description>GeoHealth Tracker</description>
  <author href="http://www.canterbury.ac.nz/" email="haydenr@catalyst.net.nz">University of Canterbury</author>
  <content src="index.html" />

  <preference name="permissions" value="none" />

  <platform name="android" />
  <platform name="ios" />

  <plugin name="cordova-plugin-mauron85-background-geolocation" spec="2.2.0" source="npm" />
  <plugin name="cordova-plugin-whitelist" version="1.2.2" source="npm" />

  <!-- Icon -->
  <icon src="static/images/icon.png" />
  <!-- Android -->
  <icon src="static/images/icon/android/ldpi.png" platform="android" qualifier="ldpi" />
  <icon src="static/images/icon/android/mdpi.png" platform="android" qualifier="mdpi" />
  <icon src="static/images/icon/android/hdpi.png" platform="android" qualifier="hdpi" />
  <icon src="static/images/icon/android/xhdpi.png" platform="android" qualifier="xhdpi" />
  <icon src="static/images/icon/android/xxhdpi.png" platform="android" qualifier="xxhdpi" />
  <icon src="static/images/icon/android/xxxhdpi.png" platform="android" qualifier="xxxhdpi" />
  <!-- iOS 8 -->
  <!-- iPhone 6 / 6+ -->
  <icon src="static/images/icon/ios/icon-60@3x.png" platform="ios" width="180" height="180" />
  <!-- iOS 7 -->
  <!-- iPhone / iPod Touch  -->
  <icon src="static/images/icon/ios/icon-60.png" platform="ios" width="60" height="60" />
  <icon src="static/images/icon/ios/icon-60@2x.png" platform="ios" width="120" height="120" />
  <!-- iPad -->
  <icon src="static/images/icon/ios/icon-76.png" platform="ios" width="76" height="76" />
  <icon src="static/images/icon/ios/icon-76@2x.png" platform="ios" width="152" height="152" />
  <!-- iOS 6.1 -->
  <!-- Settings Icon -->
  <icon src="static/images/icon/ios/icon-small.png" platform="ios" width="29" height="29" />
  <icon src="static/images/icon/ios/icon-small@2x.png" platform="ios" width="58" height="58" />
  <!-- Spotlight Icon -->
  <icon src="static/images/icon/ios/icon-40.png" platform="ios" width="40" height="40" />
  <icon src="static/images/icon/ios/icon-40@2x.png" platform="ios" width="80" height="80" />
  <!-- iPhone / iPod Touch -->
  <icon src="static/images/icon/ios/icon.png" platform="ios" width="57" height="57" />
  <icon src="static/images/icon/ios/icon@2x.png" platform="ios" width="114" height="114" />
  <!-- iPad -->
  <icon src="static/images/icon/ios/icon-72.png" platform="ios" width="72" height="72" />
  <icon src="static/images/icon/ios/icon-72@2x.png" platform="ios" width="144" height="144" />
  <!-- iPad Pro -->
  <icon src="static/images/icon/ios/icon-83.5@2x.png" platform="ios" width="167" height="167" />
  <!-- iPad Spotlight and Settings Icon -->
  <icon src="static/images/icon/ios/icon-50.png" platform="ios" width="50" height="50" />
  <icon src="static/images/icon/ios/icon-50@2x.png" platform="ios" width="100" height="100" />


  <!-- Splash screens -->
  <splash src="splash.png" />
  <!-- Android -->
  <splash src="static/images/screens/android/ldpi-portrait.png" platform="android" qualifier="port-ldpi" />
  <splash src="static/images/screens/android/ldpi-landscape.png" platform="android" qualifier="land-ldpi" />
  <splash src="static/images/screens/android/mdpi-portrait.png" platform="android" qualifier="land-mdpi" />
  <splash src="static/images/screens/android/mdpi-landscape.png" platform="android" qualifier="land-mdpi" />
  <splash src="static/images/screens/android/hdpi-portrait.png" platform="android" qualifier="port-hdpi" />
  <splash src="static/images/screens/android/hdpi-landscape.png" platform="android" qualifier="land-hdpi" />
  <splash src="static/images/screens/android/xhdpi-portrait.png" platform="android" qualifier="port-xhdpi" />
  <splash src="static/images/screens/android/xhdpi-landscape.png" platform="android" qualifier="land-xhdpi" />
  <splash src="static/images/screens/android/xxhdpi-portrait.png" platform="android" qualifier="port-xxhdpi" />
  <splash src="static/images/screens/android/xxhdpi-landscape.png" platform="android" qualifier="land-xxhdpi" />
  <splash src="static/images/screens/android/xxxhdpi-portrait.png" platform="android" qualifier="port-xxxhdpi" />
  <splash src="static/images/screens/android/xxxhdpi-landscape.png" platform="android" qualifier="land-xxxhdpi" />
  <!-- iOS -->
  <splash src="static/images/screens/ios/Default~iphone.png" platform="ios" width="320" height="480" />
  <splash src="static/images/screens/ios/Default@2x~iphone.png" platform="ios" width="640" height="960" />
  <splash src="static/images/screens/ios/Default-568h@2x~iphone.png" platform="ios" width="640" height="1136" />
  <splash src="static/images/screens/ios/Default-Portrait~ipad.png" platform="ios" width="768" height="1024" />
  <splash src="static/images/screens/ios/Default-Landscape~ipad.png" platform="ios" width="1024" height="768" />
  <splash src="static/images/screens/ios/Default-Portrait@2x~ipad.png" platform="ios" width="1536" height="2048" />
  <splash src="static/images/screens/ios/Default-Landscape@2x~ipad.png" platform="ios" width="2048" height="1536" />
  <splash src="static/images/screens/ios/Default-667h.png" platform="ios" width="750" height="1334" />
  <splash src="static/images/screens/ios/Default-736h.png" platform="ios" width="1242" height="2208" />
  <splash src="static/images/screens/ios/Default-Landscape-736h.png" platform="ios" width="2208" height="1242" />

  <allow-navigation href="https://*/*" />
  <allow-intent href="https://*/*" />
  <access origin="https://*/*" />
</widget>
